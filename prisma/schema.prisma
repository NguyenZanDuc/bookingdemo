// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}
model Test{
  id       String    @id @default(auto()) @map("_id") @db.ObjectId
  name String
}
model Hotel{
  id       String    @id @default(auto()) @map("_id") @db.ObjectId
  nameHotel String
  star Int 
  avatar String 
  images String[]
  description String?
  property String
  nameManager String
  phoneNumber String
  otherPhoneNumber String?
  nameCompany String?
  nameToolManager String?
  street String
  moreAddress String?
  country String
  city String
  potalCode String

  rooms Room?
  rate Rate?
  comments Comment[]
  askAndQuestions AskAndQuestion[]
  aroundHotel AroundHotel?
  amenitiesHotel AmenitiesHotel?
  facilitiesHotel FacilitiesHotel?
  policiesHotel PoliciesHotel?
  settingsHotel SettingsHotel?
}

type Room{
  typeRoom String
  nameRoom String
  nameOptions String?
  smoking String
  numberRoom Int
  bedsOption BedOption[]
  numberPeople Int
  roomSize Int
  price Int
}
type BedOption{
  typeBed String
  number Int
}
type Rate{
  aggregate Float
  totalRate Int
  waitresses Float
  comfort Float
  clean Float
  worthTheMoney Float
  location Float
}
type Comment{
  guestAvatar String
  guestName String
  country String
  content String
}
type AskAndQuestion{
  ask String
  question String
}

type AroundHotel{
  around String[]
  coffeeAndRestaurent String[]
  visitLocation String[]
  naturalBeauty String[]
  beachesInTheArea String[]
  publicTranport String[]
  airport String[]
}

type AmenitiesHotel{
  isExtraBedOption Boolean
  favourite String[]
  inside String[]
  foot String[]
  bathRoom String[]
  mediaAndTech String[]
  service String[]
  outSide String[]
  disabilitiesService String[]
  familyService String[]
}
type FacilitiesHotel{
  park String
  isPrivate Boolean
  isInside Boolean
  isReservation Boolean
  haveBreakFast String
  type String
  language String[]
  bestFacility String[]
}
type PoliciesHotel{
  dayCanCancel Int
  priceAll Boolean
  isInsurance Boolean
  checkIn String
  checkOut String
  isChildren Boolean
  isPet String
}
type SettingsHotel{
  isCreditCard Boolean
  creditCards String[]
  invoiceRecipient String
  isGenericAddress Boolean
  address String
  isAvailability Boolean
}